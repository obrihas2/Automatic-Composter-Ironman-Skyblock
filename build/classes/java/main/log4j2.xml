<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{HH:mm:ss}] [%t/%level] [%logger{36}]: %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <!-- Filter out Skytils websocket spam -->
        <Logger name="gg.skytils.skytilsws.client.WSClient" level="OFF" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        
        <!-- Filter out other common websocket errors -->
        <Logger name="gg.skytils.ktx-coroutines" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        
        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>